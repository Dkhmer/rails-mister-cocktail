<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path 'cocktails.jpg' %>');">
  <div class="banner-content">
    <h1>All cocktails</h1>
    <%= link_to "Add a new Cocktail", new_cocktail_path, class: 'btn btn-primary' %>
  </div>
</div>


<div class="container">
  <div class="row">
        <% @cocktails.each do |cocktail| %>
          <div class="col-12 col-md-6 col-lg-3">
            <div class="card">
              <div class="card-description">
                <%= link_to cocktail.name, cocktail_path(cocktail) %>
                  <% cocktail.doses.each do |dose| %>
                <%= dose.description %> <%= dose.ingredient.name %>
                <% end %>
              </div>
              <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
            </div>
          </div>
        <% end %>
  </div>
</div>


